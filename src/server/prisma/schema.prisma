// ==========================================
// PRISMA SCHEMA - BANG SHOT
// Padronizado estilo Laravel (snake_case)
// ==========================================

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// ==========================================
// USERS & AUTHENTICATION
// ==========================================

model User {
  id String @id @default(uuid())

  // OAuth / External IDs
  google_id    String? @unique
  facebook_id  String? @unique
  discord_id   String? @unique
  game_user_id String? @unique // Games Admin centralized auth

  // Profile
  email        String  @unique
  username     String  @unique
  display_name String
  avatar_url   String?

  // Flags
  is_admin Boolean @default(false)

  // Game Stats
  games_played  Int @default(0)
  games_won     Int @default(0)
  rounds_played Int @default(0)
  rounds_won    Int @default(0)
  total_kills   Int @default(0)
  total_deaths  Int @default(0)

  // Ranking (Legacy)
  elo_rating Int    @default(0)
  rank       String @default("Bronze")

  // Ranking (LP + MMR)
  tier              String @default("Bronze")
  division          Int?   @default(4)
  lp                Int    @default(0)
  mmr_hidden        Int    @default(800)
  peak_mmr          Int    @default(800)
  games_since_promo Int    @default(0)

  // Progression
  total_xp        Int     @default(0)
  active_title_id String?

  // Achievement Tracking
  total_sawed_shots         Int @default(0)
  total_live_hits           Int @default(0)
  total_damage_dealt        Int @default(0)
  total_items_used          Int @default(0)
  expired_medicine_survived Int @default(0)
  total_adrenaline_uses     Int @default(0)
  total_handcuff_uses       Int @default(0)
  total_info_item_uses      Int @default(0)
  items_used_bitmask        Int @default(0)
  best_win_streak           Int @default(0)
  current_win_streak        Int @default(0)

  // Timestamps
  created_at    DateTime  @default(now())
  updated_at    DateTime  @updatedAt
  last_login_at DateTime?

  // Relations
  sessions            Session[]
  game_participants   GameParticipant[]
  leaderboard_entries LeaderboardEntry[]
  user_achievements   UserAchievement[]
  game_badges         GameBadge[]
  user_titles         UserTitle[]

  // Indexes
  @@index([elo_rating(sort: Desc)])
  @@index([total_xp(sort: Desc)])
  @@index([tier, division, lp])
  @@index([mmr_hidden(sort: Desc)])
  @@index([created_at])
  @@map("users")
}

model Session {
  id String @id @default(uuid())

  // Foreign Keys
  user_id String

  // Data
  token      String   @unique
  expires_at DateTime

  // Timestamps
  created_at DateTime @default(now())

  // Relations
  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  // Indexes
  @@index([user_id])
  @@index([expires_at])
  @@map("sessions")
}

// ==========================================
// GAMES
// ==========================================

model Game {
  id String @id @default(uuid())

  // Identifiers
  room_code String @unique

  // Foreign Keys
  winner_id String?

  // Settings
  max_players  Int     @default(4)
  max_rounds   Int     @default(3)
  is_ranked    Boolean @default(false)
  has_password Boolean @default(false)
  password     String?

  // State
  status        GameStatus @default(WAITING)
  current_round Int        @default(1)
  game_state    String?    @db.LongText

  // Timestamps
  created_at            DateTime  @default(now())
  started_at            DateTime?
  ended_at              DateTime?
  game_state_updated_at DateTime?

  // Relations
  game_participants GameParticipant[]
  rounds            Round[]
  user_achievements UserAchievement[]
  game_badges       GameBadge[]

  // Indexes
  @@index([status])
  @@index([room_code])
  @@index([created_at(sort: Desc)])
  @@index([winner_id])
  @@map("games")
}

enum GameStatus {
  WAITING
  IN_PROGRESS
  COMPLETED
  ABANDONED
}

model GameParticipant {
  id String @id @default(uuid())

  // Foreign Keys
  game_id String
  user_id String?

  // Guest Info
  guest_name String?

  // Socket (reconnection)
  socket_id       String?
  reconnect_token String?

  // Results
  position   Int?
  rounds_won Int  @default(0)
  kills      Int  @default(0)
  deaths     Int  @default(0)
  items_used Int  @default(0)

  // Detailed Stats
  damage_dealt Int @default(0)
  damage_taken Int @default(0)
  self_damage  Int @default(0)
  shots_fired  Int @default(0)

  // Ranking Changes
  elo_change  Int?
  xp_earned   Int?
  lp_change   Int?
  mmr_change  Int?
  was_quitter Boolean @default(false)

  // Timestamps
  joined_at DateTime  @default(now())
  left_at   DateTime?

  // Relations
  game        Game        @relation(fields: [game_id], references: [id], onDelete: Cascade)
  user        User?       @relation(fields: [user_id], references: [id], onDelete: SetNull)
  game_badges GameBadge[]

  // Indexes
  @@unique([game_id, user_id])
  @@index([game_id])
  @@index([user_id])
  @@index([socket_id])
  @@map("game_participants")
}

model Round {
  id String @id @default(uuid())

  // Foreign Keys
  game_id   String
  winner_id String?

  // Data
  round_number Int
  max_hp       Int
  shells_live  Int
  shells_blank Int

  // Timestamps
  started_at DateTime  @default(now())
  ended_at   DateTime?

  // Relations
  game Game @relation(fields: [game_id], references: [id], onDelete: Cascade)

  // Indexes
  @@unique([game_id, round_number])
  @@index([game_id])
  @@index([winner_id])
  @@map("rounds")
}

// ==========================================
// LEADERBOARD
// ==========================================

model LeaderboardEntry {
  id String @id @default(uuid())

  // Foreign Keys
  user_id String

  // Period
  period       LeaderboardPeriod
  period_start DateTime
  period_end   DateTime

  // Stats
  games_played Int   @default(0)
  games_won    Int   @default(0)
  win_rate     Float @default(0)
  elo_gain     Int   @default(0)
  peak_elo     Int   @default(0)

  // Timestamps
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // Relations
  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  // Indexes
  @@unique([user_id, period, period_start])
  @@index([user_id])
  @@index([period, period_start])
  @@index([elo_gain(sort: Desc)])
  @@map("leaderboard_entries")
}

enum LeaderboardPeriod {
  DAILY
  WEEKLY
  MONTHLY
  ALL_TIME
}

// ==========================================
// ACHIEVEMENTS & GAMIFICATION
// ==========================================

model UserAchievement {
  id String @id @default(uuid())

  // Foreign Keys
  user_id        String
  game_id        String?
  achievement_id String

  // Timestamps
  unlocked_at DateTime @default(now())

  // Relations
  user User  @relation(fields: [user_id], references: [id], onDelete: Cascade)
  game Game? @relation(fields: [game_id], references: [id], onDelete: SetNull)

  // Indexes
  @@unique([user_id, achievement_id])
  @@index([user_id])
  @@index([game_id])
  @@index([achievement_id])
  @@map("user_achievements")
}

model GameBadge {
  id String @id @default(uuid())

  // Foreign Keys
  game_id        String
  participant_id String
  user_id        String
  badge_id       String

  // Timestamps
  awarded_at DateTime @default(now())

  // Relations
  game        Game            @relation(fields: [game_id], references: [id], onDelete: Cascade)
  participant GameParticipant @relation(fields: [participant_id], references: [id], onDelete: Cascade)
  user        User            @relation(fields: [user_id], references: [id], onDelete: Cascade)

  // Indexes
  @@unique([game_id, user_id, badge_id])
  @@index([game_id])
  @@index([participant_id])
  @@index([user_id])
  @@index([badge_id])
  @@map("game_badges")
}

model UserTitle {
  id String @id @default(uuid())

  // Foreign Keys
  user_id  String
  title_id String

  // Data
  period    TitlePeriod
  is_active Boolean     @default(true)

  // Timestamps
  awarded_at DateTime  @default(now())
  expires_at DateTime?

  // Relations
  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  // Indexes
  @@index([user_id])
  @@index([user_id, is_active])
  @@index([title_id])
  @@index([expires_at])
  @@map("user_titles")
}

enum TitlePeriod {
  WEEKLY
  MONTHLY
  ALL_TIME
}

// ==========================================
// SERVER LOGS
// ==========================================

model ServerLog {
  id String @id @default(uuid())

  // Data
  level    LogLevel
  category String   @db.VarChar(50)
  message  String   @db.Text
  context  String?  @db.LongText

  // Searchable
  room_code String? @db.VarChar(10)
  user_id   String?
  socket_id String? @db.VarChar(50)

  // Timestamps
  created_at DateTime @default(now())

  // Indexes
  @@index([created_at(sort: Desc)])
  @@index([level])
  @@index([category])
  @@index([room_code])
  @@index([user_id])
  @@map("server_logs")
}

enum LogLevel {
  DEBUG
  INFO
  WARN
  ERROR
}
